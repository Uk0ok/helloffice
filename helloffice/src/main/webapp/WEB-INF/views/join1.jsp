<html lang="en">

<head>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">

  <title>Helloffice Login</title>


  <!-- Favicons -->
  <link href="resources/assets/img/favicon.png" rel="icon">
