<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="todo">
	<insert id="insertToDo">
		INSERT INTO TODO(
			TODO_NO,
			EMP_NO,
			CONTENT
		)
		VALUES(
			TODO_SEQ.NEXTVAL,
			#{empNo},
			#{content}
		)
	</insert>
	
	<select id="getToDoList" resultType="todo">
		SELECT * FROM TODO
		WHERE EMP_NO = #{empNo}
	</select>
</mapper>
